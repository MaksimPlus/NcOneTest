@model NcOne.Models.ProgrammingLanguage
@{
    ViewBag.Title = "Добавление языка программирования";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<h2>Добавление языка программирования</h2>
<form method="post" class="form">
    <fieldset>
        <legend>Язык программирования</legend>
        <div>
            <label asp-for="Name">Имя</label>
            <input type="text" asp-for="Name" />
        </div>
        <p>
            <input type="submit" value="Добавить" />
        </p>
    </fieldset>
    <div>
        <a asp-action="Index">На главную</a>
    </div>
</form>
