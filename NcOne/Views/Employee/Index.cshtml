@model IEnumerable<NcOne.Models.Employee>
@{
    ViewBag.Title = "Все сотрудники";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<h2>Все сотрудники</h2>
<p>
    <a asp-action="RedirectToDepartament">Отделы</a>
    <a asp-action="RedirectToLanguage">Языки программирования</a>
    <a asp-action="Create">Добавить сотрудника</a>
</p>
<table class=table>
    <tr>
        <th>Имя</th>
        <th>Фамилия</th>
        <th>Возраст</th>
        <th>Пол</th>
        <th>Отдел</th>
        <th>Язык программирования</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.Age
            </td>
            <td>
                @item.Gender
            </td>
            <td>
                @item.Departaments.Name
            </td>
            <td>
                @item.ProgrammingLanguages.Name
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>

